<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenUno.MainPage">
    <ContentPage.Content>
        <StackLayout Spacing="0"
                 Orientation="Vertical">
            <Image Margin="130, 35, 130, 0"
               Source="cubes.png" />
            <Label FontFamily="BreezeSans:style=Condensed"
               HorizontalTextAlignment="Center"
               Margin="0, 15, 0, 0"
               Text="Welcome"
               TextColor="#C7D3D8" />
            <Label FontFamily="BreezeSans:style=Condensed"
               FontSize="23.8"
               HorizontalTextAlignment="Center"
               Margin="10, 12, 10, 0"
               Text="This is a test app showing random facts for numbers."
               TextColor="#C7D3D8" />

            <Button Text="Start" Clicked="Start_Clicked" VerticalOptions="EndAndExpand"/>
        </StackLayout>
        
        
        
    </ContentPage.Content>
</ContentPage>