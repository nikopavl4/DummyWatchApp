<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenUno.Favorites">
    <ContentPage.Content>

        <ListView x:Name="mylistview">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Message}" TextColor="Teal"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>





    <StackLayout Spacing="0"
                 Orientation="Vertical">
        <Button Text="Back" Clicked="Back_Clicked" VerticalOptions="EndAndExpand"/>
        </StackLayout>




</ContentPage>