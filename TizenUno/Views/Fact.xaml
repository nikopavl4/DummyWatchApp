<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenUno.Fact">

 
    <ContentPage.Content>

        <StackLayout>

            <Entry Placeholder="Insert Number" x:Name="newnum" Scale="0.9" FontSize="Micro" HorizontalTextAlignment="Center"/>
            
            
            <Label x:Name="MYLABEL" VerticalOptions="CenterAndExpand" FontSize="20" HorizontalTextAlignment="Center" Margin="40"/>

            <Button Text="LIKE" Clicked="OnHeartClick" VerticalOptions="End" ScaleY="0.6" BackgroundColor="Green" FontSize="28"/>


            <Button Text="GET FACT" Clicked="Get_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>